{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "api",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
    "include": [
    "api/**/*"
  ],
  "exclude": ["node_modules"]
}